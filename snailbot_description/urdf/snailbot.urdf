<robot name="snailbot">
  <!-- BASE-FOOTPRINT -->
      <!-- base_footprint is a fictitious link(frame) that is on the ground right below base_link origin, navigation stack depends on this frame -->
  <link name="base_footprint">
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
      iyy="0.0001" iyz="0.0" 
      izz="0.0001" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.001 0.001 0.001" />
    </geometry>
    </visual>
  </link>

  <!-- BASE-LINK -->
  <!--Actual body/chassis of the robot-->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5708" />
      <geometry>
        <mesh filename="package://snailbot_description/meshes/snailbot.stl"  scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <material name="">
      <color rgba="0.2 0.2 0.2 1" />
    </material>
  </link>

  <!-- CAMERA-LINK -->
  <!-- Asus xtion for navigation -->
  <link name="camera_link">
    <visual>
      <origin xyz="0.0 0 0.0" rpy="1.5708 0 0" />
      <geometry>
        <mesh filename="package://snailbot_description/meshes/xtion.stl" />
      </geometry>
    </visual>    
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.04" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.125 0 0.15" rpy="0 0 0" />
    <parent link="base_link"/>
    <child link="camera_link" />
  </joint>

</robot>
